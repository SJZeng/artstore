      <td>
        <% if user.admin? %>
          Admin
        <% else %>
          Normal
        <% end %>
      </td>
      <td>
        <% if user.admin? %>
          <%= link_to("Change to Normal", "#", class: "btn btn-info") %>
        <% else %>
          <%= link_to("Change to Admin", "#", class: "btn btn-primary") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
